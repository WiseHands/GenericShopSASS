# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /ru                                     Application.indexRu
GET     /shop                                   Application.shop
GET     /map                                    Application.map(format:'xml')

GET     /admin                                  Application.admin
GET     /login                                  Application.login

POST    /signin                                 Application.signin

GET     /products                               ProductAPI.list
GET     /product/{uuid}                         ProductAPI.details
POST    /product                                ProductAPI.create
PUT     /product/{uuid}                         ProductAPI.update
DELETE  /product/{uuid}                         ProductAPI.delete

GET     /orders                                 OrderAPI.list
GET     /order/{uuid}                           OrderAPI.details
POST    /order                                  OrderAPI.create
DELETE  /order/{uuid}                           OrderAPI.delete
*       /success                                OrderAPI.success


*       /done                                   Application.done
*       /fail                                   Application.fail

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
