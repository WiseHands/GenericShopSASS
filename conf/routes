# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /ru                                     Application.indexRu
GET     /shop                                   Application.shop
GET     /map                                    Application.map(format:'xml')
*       /success                                Application.success

GET     /admin                                  Application.admin
GET     /login                                  Application.login

GET     /mail                                  	Application.email
GET     /orders                                 Application.orders
GET     /order/{id}                             Application.order
POST    /pay                                    Application.pay
POST    /signin                                 Application.signin

GET     /products                               ProductAPI.list
GET     /products/{uuid}                        ProductAPI.details
POST    /products                               ProductAPI.create
DELETE  /products/{uuid}                        ProductAPI.delete

*       /done                                   Application.done
*       /fail                                   Application.fail

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
